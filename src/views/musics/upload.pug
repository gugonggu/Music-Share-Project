extends ../base.pug

block section
    if errorMessage
        span.message.error= errorMessage
    form#uploadForm.defaultFormStyle(method="POST")
        span.formTopSpan 음악 추천
        input(name="title", type="text", required, placeholder="제목")
        input(name="artist", type="text", required, placeholder="아티스트")
        input(name="musicUrl", type="text", required, placeholder="유튜브 영상 URL")
        input#genreInput(
            name="genre",
            type="text",
            required,
            placeholder="장르",
            readonly
        )
        #genreSelect.selectNone
            span.genre 발라드
            span.genre 댄스/팝
            span.genre 포크/어쿠스틱
            span.genre 랩/힙합
            span.genre 알앤비/소울
            span.genre 일렉트로닉
            span.genre 락/메탈
            span.genre 재즈
            span.genre 인디
            span.genre 캐롤
            span.genre 국악
            span.genre J-POP
            span.genre 클래식
            span.genre 뉴에이지
        input(type="submit", value="음악 추천")

block scripts
    script(src="/assets/js/upload.js")
