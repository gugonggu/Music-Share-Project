extends ../base.pug

block section
    form(method="POST")
        input(
            type="text",
            name="title",
            required,
            placeholder="제목",
            value=music.title
        )
        input(
            type="text",
            name="artist",
            required,
            placeholder="아티스트",
            value=music.artist
        )
        input(
            type="text",
            name="musicId",
            required,
            placeholder="유튜브 영상 ID",
            value=music.musicInfo.musicId
        )
        input(
            type="text",
            name="genre",
            required,
            placeholder="장르 (,로 구분)",
            value=music.genre.join()
        )
        input(
            type="text",
            name="tags",
            required,
            placeholder="태그 (,로 구분)",
            value=music.tags.join()
        )
        input(type="submit", value="변경사항 저장")
