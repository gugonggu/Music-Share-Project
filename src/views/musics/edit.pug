extends ../base.pug

block section
    form.defaultFormStyle(method="POST")
        span.formTopSpan 음악 정보 수정
        input(
            type="text",
            name="title",
            required,
            placeholder="제목",
            value=music.title
        )
        input(
            type="text",
            name="artist",
            required,
            placeholder="아티스트",
            value=music.artist
        )
        input(
            type="text",
            name="musicUrl",
            required,
            placeholder="유튜브 영상 URL",
            value=music.musicInfo.musicUrl
        )
        input(
            type="text",
            name="genre",
            required,
            placeholder="장르 (,로 구분)",
            value=music.genre
        )
        input(type="submit", value="변경사항 저장")
