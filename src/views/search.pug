extends base.pug
include mixins/music

block section
    form.search__form(method="GET")
        input(name="titleKeyword", type="text", placeholder="제목으로 검색")
        button
            i.fas.fa-search
    form.search__form(method="GET")
        input(name="artistKeyword", type="text", placeholder="아티스트로 검색")
        button
            i.fas.fa-search

    .music-grid
        each music in musics
            +music(music)
        else
            span.empty_message 음악을 찾을 수 없습니다.
