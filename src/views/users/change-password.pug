extends ../base.pug

block section
    if errorMessage
        span= errorMessage
    form.defaultFormStyle(method="POST")
        span.formTopSpan 비밀번호 변경
        input(name="oldPassword", type="password", placeholder="이전 비밀번호")
        input(name="newPassword", type="password", placeholder="새 비밀번호")
        input(
            name="newPasswordConfirmation",
            type="password",
            placeholder="새 비밀번호 확인"
        )
        input(type="submit", value="비밀번호 변경")
