extends base.pug
include mixins/music

block section
    .homeWrap
        .musicThatUserListened.recommendWrap
            .musicRecommendControl
                span.musicRecommendTitle 내가 좋아하는
                button 더보기
            .music-grid
                each music in musics
                    +music(music)
                else
                    span.empty__message 음악을 찾을 수 없습니다.

        .musicThatUserWeather.recommendWrap
            .musicRecommendControl
                span.musicRecommendTitle 비가 내릴 땐
                button 더보기
            .music-grid
                each music in musics
                    +music(music)
                else
                    span.empty__message 음악을 찾을 수 없습니다.

        .musicThatUserTime.recommendWrap
            .musicRecommendControl
                span.musicRecommendTitle 저녁 드라이브
                button 더보기
            .music-grid
                each music in musics
                    +music(music)
                else
                    span.empty__message 음악을 찾을 수 없습니다.
