extends base.pug

block section
    if errorMessage
        span.message.error= errorMessage
    form.defaultFormStyle(method="POST")
        span.formTopSpan 회원가입
        input(name="name", type="text", required, placeholder="이름")
        input(name="username", type="text", required, placeholder="닉네임")
        input(name="email", type="email", required, placeholder="이메일")
        input(name="password", type="password", required, placeholder="비밀번호")
        input(
            name="confirmPassword",
            type="password",
            required,
            placeholder="비밀번호 확인"
        )
        input(type="submit", value="가입")
        .formGoto
            span 이미 계정이 있으신가요?
            a(href="/login") 로그인 하러 가기 &rarr;
